{% extends 'base.html.twig' %}
  {% block stylesheets %}
      <link rel="stylesheet" href="https://mobirise.com/bootstrap-4-theme/magazine-template/assets/theme/css/style.css">
      <link rel="stylesheet" href="https://mobirise.com/bootstrap-4-theme/magazine-template/assets/mobirise/css/mbr-additional.css" type="text/css">
  {% endblock %}
  {% block carousel %}
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                {% for genre in genres %}
                <li data-target="#myCarousel" data-slide-to="{{loop.index}}" class="active"></li>
                {% endfor %}
              </ol>
              <div class="carousel-inner">
                {% for i in 0..genres|length - 1  %}
                  <div class="carousel-item {% if loop.first %}active{% endif %}">
                    <img class="first-slide" src="{{images[i]}}" alt="First slide" style="object-fit:cover">
                      <div class="carousel-caption text-left">
                        <h3>{{ genres[i].nameGenre }}</h3>
                          <a class="btn btn-dark btn-sm" href="{{ path('Genre', {slug: genres[i].id}) }}" role="button">Voir</a>
                      </div>
                  </div>
                {% endfor %}
              </div>
              <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
      </div>
  {% endblock %}
  {% block middle %}
      <section class="features3 cid-qzaosgPVmz" id="features3-7" data-rv-view="5922">
        <strong class="d-flex justify-content-center" style="font-size: 60px">Random movie</strong>
        <hr>
        <div class="album py-5 text-center">
            <div class="container">
                <div class="row">
                    {% for movie in movies %}
                            <div class="card p-3 col-12 col-md-6 col-lg-3">
                                <div class="card-wrapper">
                                    <div class="card-img">
                                        <img src="{{ movie.img }}" alt="Mobirise" title="" media-simple="true">
                                    </div>
                                    <div class="card-box">
                                        <h4 class="card-title mbr-fonts-style display-7">
                                            <strong>{{movie.title}}</strong>
                                        </h4>
                                        <p class="mbr-text mbr-fonts-style display-7">{{movie.overview}}</p>
                                    </div>
                                    <div class="mbr-section-btn text-center">
                                        <a href="{{ path('Movie', {slug: movie.id}) }}" class="btn btn-black display-4">See more</a>
                                    </div>
                                </div>
                            </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
  {% endblock %}


