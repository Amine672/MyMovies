{% extends 'base.html.twig' %}

{% block stylesheet %}
<style>
</style>
{% endblock %}

{% block middle %}
 <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

 <div class="container">
             <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb60 text-center">
                        <h2>The movies you rated</h2>
                    </div>
                </div>
            <div class="row container">
                {% for profile in userMovie %}
                    <div class="col-lg-4 col-md-4 col-sm-2 col-xs-12 mb30">
                        <div class="tutor-block">
                            <div class="tutor-img">
                                <img src="{{profile.movie.img}}">
                            </div>
                            <div class="tutor-content">
                                <h5 class="tutor-title">{{profile.movie.title}}</h5>
                                <span class="tutor-designation">{{profile.movie.createdAt}}</span>
                                <strong class="d-flex justify-content-end">You rated the movie {{profile.rate}} / 10</strong>
                                <p>{{profile.movie.overview}}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
{% endblock %}