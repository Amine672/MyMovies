{% extends 'base.html.twig' %}

{% block stylesheet %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://mobirise.com/bootstrap-4-theme/magazine-template/assets/theme/css/style.css">
    <link rel="stylesheet" href="https://mobirise.com/bootstrap-4-theme/magazine-template/assets/mobirise/css/mbr-additional.css" type="text/css">
     <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
{% endblock %}
{% endblock %}

{% block middle %}
    <section class="features3 cid-qzaosgPVmz" id="features3-7" data-rv-view="5922">
        <strong class="d-flex justify-content-center" style="font-size: 60px">You rated {{ rated }} movie</strong>
        <hr>
        <div class="album py-5 text-center">
            <div class="container">
                <div class="row">
                    {% for profile in userMovie %}
                            <div class="card p-3 col-12 col-md-6 col-lg-3">
                                <div class="card-wrapper">
                                    <div class="card-img">
                                        <img src="{{ profile.movie.img }}" alt="Mobirise" title="" media-simple="true">
                                    </div>
                                    <div class="card-box">
                                        <h4 class="card-title mbr-fonts-style display-7">
                                            <strong>{{profile.movie.title}}</strong>
                                        </h4>
                                        <p class="mbr-text mbr-fonts-style display-7">{{profile.movie.overview}}</p>
                                    </div>
                                    <div class="mbr-section-btn text-center">
                                        <a href="{{ path('Movie', {slug: profile.movie.id}) }}" class="btn btn-black display-4">See more</a>
                                    </div>
                                </div>
                            </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}