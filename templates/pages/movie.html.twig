{% extends 'base.html.twig' %}
{% block middle %}
    <br>
    
    <div style="display: flex;">
        <img src="{{ movie.img }}">
        <article style="padding-left:15px">
            <h1 style="font-size:60px">{{movie.title}}</h1>
	        <div class="star-rating">
	        	<label for="star-10" title="10 stars">
                    <input class="star" type="radio" name="rating" value="10">
	        		<i class="active fa fa-star" aria-hidden="true"></i>
	        	</label>
	        	<label for="star-9" title="9 stars">
                    <input class="star" type="radio" name="rating" value="9">
	        		<i class="active fa fa-star" aria-hidden="true"></i>
	        	</label>
	        	<label for="star-8" title="8 stars">
                    <input class="star" type="radio" name="rating" value="8">
	        		<i class="active fa fa-star" aria-hidden="true"></i>
	        	</label>
	        	<label for="star-7" title="7 stars">
                    <input class="star" type="radio" name="rating" value="7">
	        		<i class="active fa fa-star" aria-hidden="true"></i>
	        	</label>
	        	<label for="star-6" title="6 star">
                    <input class="star" type="radio" name="rating" value="6">
	        		<i class="active fa fa-star" aria-hidden="true"></i>
	        	</label>
	        	<label for="star-5" title="5 stars">
                       <input class="star" type="radio" name="rating" value="5">
	        		<i class="active fa fa-star" aria-hidden="true"></i>
	        	</label>
	        	<label for="star-4" title="4 stars">
                       <input class="star" type="radio" name="rating" value="4">
	        		<i class="active fa fa-star" aria-hidden="true"></i>
	        	</label>
	        	<label for="star-3" title="3 stars">
                       <input class="star" type="radio" name="rating" value="3">
	        		<i class="active fa fa-star" aria-hidden="true"></i>
	        	</label>
	        	<label for="star-2" title="2 stars">
                       <input class="star" type="radio" name="rating" value="2">
	        		<i class="active fa fa-star" aria-hidden="true"></i>
	        	</label>
	        	<label for="star-1" title="1 star">
                       <input class="star" type="radio" name="rating" value="1">
	        		<i class="active fa fa-star" aria-hidden="true"></i>
	        	</label>
                
	        </div>
            <hr>
            <br>
            {% for genre in movie.genres %}
                 <a href="http://127.0.0.1:8000/Genre/{{genre.id}}"><strong style="font-size:30px">{{ genre.nameGenre }}, </strong></a>
            {% endfor %}
            <br>         
            <p style="font-size:30px">Duration : <strong style="font-size:30px">{{ movie.duration }} min</strong></p>
            <p style="font-size:30px">Created at : <strong style="font-size:30px">{{ movie.createdAt }}</strong></p> 
            <p style="font-size:30px">Made by : <strong style="font-size:30px">{{ movie.director.nameDirector }}</strong></p> 
            <p style="font-size:30px"> Actors : 
            {% for actor in movie.actors %}
                 <a href="http://127.0.0.1:8000/Actor/{{actor.id}}"><strong style="font-size:30px">{{ actor.nameActor }},</strong></a>
            {% endfor %}
            </p>
            <p style="font-size:30px">{{movie.overview}}</p>
        </article>
    </div>       


  
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(".fa-star").click(function(){
            var note = $(this).siblings(".star").val();
            $.post(
                "/Rate/"+note+"/"+{{ app.user.id }}+"/"+{{ movie.id }}
            )
        })
                        {# function(data){
                    alert(data);
                } #}
    </script>
{% endblock %}  