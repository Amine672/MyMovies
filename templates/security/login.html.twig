{% extends 'base.html.twig' %}
{% block middle %}
    <h1>Login page </h1>
    {% if error %}
        <div class="alert alert-danger">
            <ul class="list-unstyled mb-0">
                <li><span class="initialism form-error-icon badge badge-danger">Error</span> 
                    <span class="form-error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </li>
            </ul>
        </div>
    {% endif %}
    {{form(formLogin)}}
    <a class="list-group" href="{{path('security_registration')}}"><button type="Button" class="btn btn-dark">Create a new account</button></a>
{% endblock %}
